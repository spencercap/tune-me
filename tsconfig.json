{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": [
		"./src/"
	],
	"exclude": ["node_modules"]
}

